@using Microsoft.AspNetCore.Hosting
@using Microsoft.AspNetCore.Mvc.ViewEngines
@inject IWebHostEnvironment Environment
@inject ICompositeViewEngine Engine
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Instants Showcase - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/Identity/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Identity/css/site.css" />

    <style>
        html, body, div, span, applet, object, iframe, h1, h2, h3, h4, h5, h6, p, blockquote, pre, a, abbr, acronym, address, big, cite, code, del, dfn, em, img, ins, kbd, q, s, samp, small, strike, strong, sub, sup, tt, var, b, u, i, center, dl, dt, dd, ol, ul, li, fieldset, form, label, legend, table, caption, tbody, tfoot, thead, tr, th, td, article, aside, canvas, details, embed, figure, figcaption, footer, header, hgroup, menu, nav, output, ruby, section, summary, time, mark, audio, video {
            margin: 0;
            padding: 0;
            border: 0;
            font-size: 100%;
            font: inherit;
            vertical-align: baseline;
            box-sizing: border-box
        }

        *, *:before, *:after {
            box-sizing: inherit
        }

        ol, ul {
            list-style: none
        }

        img {
            max-width: 100%;
            height: auto
        }

        body {
            background: #002EE5;
            background: radial-gradient(circle, #F7EDE5 0%,#F7EDE5 100%);
            filter: progid:DXImageTransform.Microsoft.gradient(startColorstr="$IGTMediumBlue",endColorstr="$IGTBlue",GradientType=1)
        }

            body .container {
                background-color: transparent !important;
                color: #fff;
                font: normal 16px/21px 'Lato', Helvetica, Arial, sans-serif;
                *zoom: 1
            }

                body .container:before, body .container:after {
                    content: "";
                    display: table
                }

                body .container:after {
                    clear: both
                }

                body .container a {
                    color: orange;
                    text-decoration: none;
                    font-weight: normal
                }

                    body .container a:hover {
                        color: black;
                    }

                body .container:after {
                    content: '\00a9	\00a0 IGT. All rights reserved.';
                    display: block;
                    width: 100%;
                    height: 20px;
                    line-height: 20px;
                    font-size: 12px;
                    text-align: center;
                    margin: 30px 0 50px;
                    color: #002EE5;
                }

                body .container .login_container {
                    max-width: 800px;
                    margin: 0 auto;
                    *zoom: 1;
                    position: relative;
                    background: #1b9ddb;
                    background: linear-gradient(to right, #1b9ddb 0%, #1b9ddb 60%, #002EE5 60%, #002EE5 60%, #002EE5 100%);
                    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='$IGTMediumBlue', endColorstr='$$IGTBlue',GradientType=1 );
                    box-shadow: 0px 0px 100px -20px rgba(0,56,101,0.95)
                }

                    body .container .login_container:before, body .container .login_container:after {
                        content: "";
                        display: table
                    }

                    body .container .login_container:after {
                        clear: both
                    }

        @@ media only screen and (max-width: 650px) {
            body .container .login_container {
                background: none !important;
                -webkit-filter: none;
                filter: none
            }
        }

        body .container .login_container h2 {
            font-size: 20px;
            line-height: 25px;
            font-weight: 400;
            font-family: 'Verlag', 'Lato', Helvetica, Arial, sans-serif;
            margin-bottom: 20px
        }

        body .container .login_container table {
            width: 100%
        }

            body .container .login_container table tr td {
                padding: 0 10px 0 0;
                vertical-align: middle !important;
                height: 50px
            }

                body .container .login_container table tr td:nth-child(1) {
                    width: 40%;
                    float: left
                }

                body .container .login_container table tr td:nth-child(2) {
                    width: 60%;
                    float: left;
                    padding: 0
                }

                body .container .login_container table tr td:nth-child(3) {
                    display: block;
                    clear: both;
                    text-align: right;
                    height: auto;
                    padding: 0
                }

                body .container .login_container table tr td[colspan="3"] {
                    margin: 10px 0 0 0 !important;
                    padding: 0 !important;
                    display: block;
                    width: 100%;
                    padding: 0;
                    height: 40px
                }

                body .container .login_container table tr td strong {
                    font-weight: 300;
                    position: relative
                }

        body .container .login_container hr {
            height: 1px;
            border: none;
            margin: 0 0 20px 0;
            background: #8dc8e8;
            display: none
        }

        body .container .login_container .button {
            position: relative;
            top: 0 !important;
            width: 100%;
            display: block
        }

            body .container .login_container .button a, body .container .login_container .button input {
                min-width: 150px !important
            }

        body .container .login_container input[type="text"], body .container .login_container input[type="password"], body .container .login_container input[type="submit"] {
            border: 2px solid #fff;
            color: #fff;
            width: 100% !important;
            height: 40px;
            line-height: 40px;
            padding: 0 10px;
            font-family: 'Lato', Helvetica, Arial, sans-serif;
            -webkit-appearance: none;
            border-radius: 0;
            -webkit-transition: all 0.30s ease-in-out;
            -moz-transition: all 0.30s ease-in-out;
            -ms-transition: all 0.30s ease-in-out;
            -o-transition: all 0.30s ease-in-out
        }

        body .container .login_container input[type="text"], body .container .login_container input[type="password"] {
            background: none;
            font-size: 14px
        }

            body .container .login_container input[type="text"]:focus, body .container .login_container input[type="password"]:focus {
                outline: none !important;
                box-shadow: none;
                border-color: #8dcdec;
                -webkit-transition: all 0.30s ease-in-out;
                -moz-transition: all 0.30s ease-in-out;
                -ms-transition: all 0.30s ease-in-out;
                -o-transition: all 0.30s ease-in-out
            }

        body .container .login_container input[type="submit"] {
            border: none !important;
            cursor: pointer;
            font-size: 16px;
            font-weight: bold;
            font-family: 'Verlag', 'Verlag A', Helvetica, Arial, sans-serif
        }

        body .container .login_container .login_left {
            width: 60%;
            height: 100%;
            float: left;
            background: #002EE5;
            padding: 30px
        }

        @@ media only screen and (max-width: 650px) {
            body .container .login_container .login_left {
                width: 100%;
                float: none
            }
        }

        body .container .login_container .login_right {
            width: 40%;
            height: 100%;
            float: left;
            background: #002EE5;
            padding: 30px
        }

        @@ media only screen and (max-width: 650px) {
            body .container .login_container .login_right {
                width: 100%;
                float: none
            }
        }

        body .container .login_container .login_right .login_body {
            font-size: 12px;
            line-height: 17px
        }

            body .container .login_container .login_right .login_body a {
                display: block;
                clear: both
            }

            body .container .login_container .login_right .login_body br:nth-child(even) {
                display: none !important
            }

            body .container .login_container .login_right .login_body .btn_blue {
                margin: 5px 0 20px 0
            }

            body .container .login_container .login_right .login_body div {
                margin: 0 !important
            }

        body .container .single_header {
            width: 135px;
            height: auto;
            margin: 30px auto
        }

            body .container .single_header h1 {
                width: 135px;
                height: 50px
            }

                body .container .single_header h1 a {
                    background-image: url('/remainco_logo.png');
                    background-size: 135px 50px;
                    text-indent: 100%;
                    white-space: nowrap;
                    overflow: hidden;
                    width: 135px;

                    height: 50px;
                    margin: 0;
                    padding: 0;
                    display: block
                }

            body .container .single_header .home_link, body .container .single_header .home_link a {
                display: none;
                visibility: hidden
            }

        .RememberMe, .PasswordForgot {
            font-size: 12px !important;
            line-height: 17px !important;
            cursor: pointer
        }

        .login_footer {
            display: none;
            visibility: hidden
        }

        .btn_blue input, .btn_blue a {
            background: #1b9ddb !important
        }

            .btn_blue input:hover, .btn_blue a:hover {
                background: #fff !important;
                color: #1b9ddb !important
            }

        .btn_orange input, .btn_orange a {
            background: #ffa300
        }

            .btn_orange input:hover, .btn_orange a:hover {
                background: #fff !important;
                color: #ffa300 !important
            }

        .form_alert {
            font-size: 12px;
            line-height: 17px;
            margin-bottom: 25px;
            padding: 5px 10px;
            border: 1px solid #8dcdec;
            font-weight: 300 !important
        }

            .form_alert p {
                font-weight: 300 !important
            }

            .form_alert h3 {
                font-weight: bold !important;
                font-size: 14px
            }
    </style>
</head>
<body>
    <div class="container" style="background-color: White; margin-bottom: 0px;">
        <div class="single_header">
            <h1><a href="/" title="Brightstar">Brightstar</a></h1>
            <div class="home_link"><a title="brightstarlottery.com Home" href="http://www.brightstarlottery.com">brightstarlottery.com Home</a></div>
        </div>
        @RenderBody()
    </div>
    <script src="~/Identity/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/Identity/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Identity/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
