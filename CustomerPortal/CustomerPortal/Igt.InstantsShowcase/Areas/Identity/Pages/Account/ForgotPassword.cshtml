@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<h1 class="mb-3" style="font-size:20px; font-weight:700; color:#002EE5">@ViewData["Title"]</h1>
<h4 style="color:#002EE5">Enter your email.</h4>
<hr />
<div class="row">
    <div class="col-md-4" style="color:#002EE5">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary" style="margin-top:1rem">Submit</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
